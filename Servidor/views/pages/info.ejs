<!doctype html>
<html>

<head>
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- load bootstrap css -->
    <!-- load fontawesome -->
    <script src="https://kit.fontawesome.com/71c003face.js" crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/index">
                <i class="fa-solid fa-ghost"></i>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/info">Profile</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    <br>
    <h1 class="text-primary  text-center"><i class="fa-solid fa-user"></i> Profile Information</h1>
    <hr>
    <div class="row text-center">
        <div class="col-4"></div>
        <div class="col-4 text-center">
            <div class="card text-dark bg-info mb-3">
                <div class="card-header"><i class="fa-solid fa-id-card"></i><strong> Id</strong>: <%= user.id %>
                </div>
                <div class="card-body text-start">
                    <h5 class="card-title">User Info</h5>
                    <p class="card-text">
                        <i class="fa-solid fa-signature"></i><strong> Name</strong>: <%= user.displayName %><br>
                            <i class="fa-solid fa-envelope"></i><strong> Email</strong>: <%= user.emails[0].value %><br>
                                <i class="fa-solid fa-key"></i><strong> APIKEY</strong>: <%= results[0].apikey %><br>
                                    <i class="fa-brands fa-octopus-deploy"></i></i><strong> PRIVILEGIOS</strong>: <%=
                                        results[0].tipo %>
                    </p>
                    <form action="/updateApi" method="post">
                        <input type="submit" class="btn btn-primary" value="New Api" /> </p>
                    </form>
                    <form action="/cambiarPrivilegios" method="post">
                        <input type="submit" class="btn btn-primary" value="Modificar Priviliegios" /> </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>

</html>